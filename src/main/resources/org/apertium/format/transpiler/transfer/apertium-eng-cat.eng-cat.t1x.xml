<?xml version="1.0" encoding="UTF-8"?> <!-- -*- nxml -*- -->
<transfer default="chunk">
    
    <section-def-macros>

        <def-macro n="conj_verb1" npar="1"><!--conjuga un verb -->

            <!--Primera part: si aquest verb Ã©s un verb modal -->

            <choose>
                <when>
                    <test>
                        <and>
                            <or>
                                <equal caseless="yes">
                                    <clip pos="1" side="sl" part="lem"/>
                                    <lit v="can"/>
                                </equal>
                                <equal>
                                    <clip pos="1" side="sl" part="temps"/>
                                    <lit-tag v="pres"/>
                                </equal>
                            </or>
                            <or>
                                <and>
                                    <equal caseless="yes">
                                        <clip pos="1" side="sl" part="lem"/>
                                        <lit v="can"/>
                                    </equal>
                                    <equal caseless="yes">
                                        <clip pos="1" side="sl" part="lem"/>
                                        <lit v="can"/>
                                    </equal>
                                </and>
                                <equal>
                                    <clip pos="1" side="sl" part="temps"/>
                                    <lit-tag v="pres"/>
                                </equal>
                            </or> 
                        </and>
                    </test>
                    <let>
                        <var n="temps_chunk"/>
                        <lit-tag v="pri"/>
                    </let>
                </when>
            </choose>
        </def-macro>
    
    </section-def-macros>
    
</transfer>
