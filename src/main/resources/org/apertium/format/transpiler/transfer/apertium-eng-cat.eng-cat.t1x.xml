<?xml version="1.0" encoding="UTF-8"?> <!-- -*- nxml -*- -->
<transfer default="chunk">

    <section-def-macros>
        
        <def-macro n="elimina_GDND" npar="1">
            <choose>
                <when>
                    <test>
                        <or>
                            <and>
                                <equal>
                                    <clip pos="1" side="tl" part="gen"/>
                                    <lit v="1"/>
                                </equal>
                                <equal>
                                    <clip pos="1" side="tl" part="gen"/>
                                    <lit v="2"/>
                                </equal>
                            </and>
                            <or>
                                <and>
                                    <equal>
                                        <clip pos="1" side="tl" part="gen"/>
                                        <lit v="3"/>
                                    </equal>
                                    <equal>
                                        <clip pos="1" side="tl" part="gen"/>
                                        <lit v="4"/>
                                    </equal>
                                </and>
                                <equal>
                                    <clip pos="1" side="tl" part="gen"/>
                                    <lit v="5"/>
                                </equal>
                            </or>
                            <equal>
                                <clip pos="1" side="tl" part="gen"/>
                                <lit v="6"/>
                            </equal>
                        </or>
                    </test>
                    <let>
                        <clip pos="1" side="tl" part="gen"/>
                        <lit-tag v="m"/>
                    </let>
                </when>
            </choose>
        </def-macro>
            
    </section-def-macros>
    
</transfer>
